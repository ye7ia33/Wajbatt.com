<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:padding="5dp"
    tools:context="pcode.com.wajbatt.RegistrationView"
    android:background="@color/windowBackground"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_img_logo"
        android:alpha="1"
        android:background="@drawable/wajbattlogo"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/login_linearLayout"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_linearLayout"
        android:layout_centerVertical="true"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/login_txt_username"
            android:inputType="textPersonName"
            android:hint="أسم المستخدم"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:gravity="center_horizontal"
            android:layout_weight="0.97"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/login_txt_password"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="كلمه المرور"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:gravity="center_horizontal"
            android:layout_weight="0.97"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="تأكيد الدخول"
        android:id="@+id/login_btn_login"
        android:layout_gravity="center_horizontal"
        android:onClick="chkLogin"
        android:layout_above="@+id/login_btn_newUser"
        android:layout_marginBottom="5dp"
        android:background="@color/indigo"

        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="تسجيل مطعم جديد"
        android:id="@+id/login_btn_newUser"
        android:background="@color/indigo"
        android:layout_gravity="center_horizontal"
        android:onClick="newUser"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
