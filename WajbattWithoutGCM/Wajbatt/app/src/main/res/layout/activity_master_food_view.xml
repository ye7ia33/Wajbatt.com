<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            tools:context="pcode.com.wajbatt.RegistrationView"
            android:background="@color/windowBackground"
            android:id="@+id/relativeLayout_foodMasterView"
            >



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/masterView_btn_addNewFood"
                android:layout_alignParentRight="true"
                android:onClick="masterViewAction_addNewFood"
                android:background="@drawable/add"
                />
        </RelativeLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/masterView_listView"
           />

    </LinearLayout>
</RelativeLayout>